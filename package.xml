 <name>Gtk2_VarDump</name>
 <channel>pear.php.net</channel>
 <summary>A simple GUI to examine php data trees</summary>
 <description>
  Just a regedit type interface to examine PHP data trees.
 </description>

 <lead>
  <name>Christian Weiske</name>
  <user>cweiske</user>
  <email>cweiske@php.net</email>
  <active>yes</active>
 </lead>

 <date>2008-04-11</date>

 <version>
  <release>1.0.0</release>
  <api>1.0.0</api>
 </version>

 <stability>
  <release>stable</release>
  <api>stable</api>
 </stability>
 <license uri="http://www.gnu.org/licenses/lgpl.html">LGPL</license>

 <notes>
  Adjust to PHP-Gtk2 stable's version API changes
 </notes>

 <contents>
  <dir name="/" baseinstalldir="Gtk2">
   <file name="VarDump.php" role="php"/>
   <dir name="VarDump">
    <file name="ColTreeView.php" role="php"/>
    <file name="List.php"        role="php"/>
    <file name="Pane.php"        role="php"/>
    <file name="Tree.php"        role="php"/>
   </dir>
   <dir name="docs">
    <dir name="examples">
     <file name="Gtk2_VarDump_array.phpw"     role="doc"/>
     <file name="Gtk2_VarDump_gtkwindow.phpw" role="doc"/>
     <file name="Gtk2_VarDump_object.phpw"    role="doc"/>
     <file name="Gtk2_VarDump_string.phpw"    role="doc"/>
    </dir>
   </dir>
  </dir>
 </contents>

 <dependencies>
  <required>
   <php>
    <min>5.1</min>
    <max>6.0.0</max>
   </php>
   <pearinstaller>
    <min>1.4.1</min>
   </pearinstaller>
   <extension>
    <name>php-gtk</name>
    <min>2.0.1</min>
   </extension>
  </required>
 </dependencies>

 <phprelease/>

